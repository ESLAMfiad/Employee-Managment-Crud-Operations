@model IEnumerable<UserViewModel>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model.Count() > 0)
{
		<div class="mt-5">
						<Form class="row offset-2" asp-action="index">
								<div class="col-8">
								<input class="form-control" type="text" name="SearchValue" placeholder="User name"/>
								</div>
								<div class= "col-4">
			    				<input type="submit" class="btn btn-success" value="Search" />
								</div>
						</Form>
		</div>

		<table class="table table-striped table hover mt-5">
			<thead>
				<tr>
					<td>@Html.DisplayNameFor(U=>U.Id)</td>
					<td>@Html.DisplayNameFor(U=>U.Fname)</td>
					<td>@Html.DisplayNameFor(U=>U.Lname)</td>
					<td>@Html.DisplayNameFor(U=>U.Email)</td>
					<td>@Html.DisplayNameFor(U=>U.PhoneNumber)</td>
					<td>@Html.DisplayNameFor(U=>U.Roles)</td>
					<th>Details</th>
					<th>Update</th>
					<th>Delete</th>
				</tr>
			</thead>
			<tbody>
			@foreach(var User in Model)
			{
				<tr>
					<td>@User.Id</td>
					<td>@User.Fname</td>
					<td>@User.Lname</td>
					<td>@User.Email</td>
					<td>@User.PhoneNumber</td>
					<td>@string.Join(",",User.Roles)</td>
					<partial name="_ButtonPartialView" model="@User.Id.ToString()">
				</tr>
			}
			</tbody>
		</table>
}
else
{
		<div> <h1> there is no users</h1></div>
}
